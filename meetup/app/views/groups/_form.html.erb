                    country= results[0].address_components[i];
                    break;
                }
            }
        }

        document.getElementById("location").value = city.short_name+","+country.short_name;
        $("#location").geocomplete(); 
       

        } else {
       
        }
      } else {
        
      }
    });
  }
</script>
