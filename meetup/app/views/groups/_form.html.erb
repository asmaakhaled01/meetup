<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well">
    <%= f.label :location %><br>
    <%= f.text_field :location, id:"location" %>
  </div>


  <div class="well">
    
    <%= fields_for :interest do |t| %>
       <%= t.label :interest %>
       <br>
       <%= t.text_field :interest, id:"interest" ,value:"" %>
       <br/> 
        Pick up to 15 topics
    </br>
    <input type="button" id="art" class="btn btn-default" value="Art" name="Art" />
    <input type="button" id="food" class="btn btn-default" value="Food" name="Food" />  
    <input type="button" id="fun" class="btn btn-default" value="Fun" name="Fun" />
    <input type="button" id="computer" class="btn btn-default" value="Computer" name="Computer" /> 
    <input type="button" id="science" class="btn btn-default" value="Science" name="Science" /> 
    <% end %>  
  </div>


  <div class="well">
    <%= f.label :name %><br>
    <%= f.text_field :name%>
  </div>


  <div class="well">
    <%= f.label :description %><br>
    <%= f.text_field :description%>
  </div>

 <div class="well">
    <%= f.label :MambersName %><br>
    <%= f.text_field :MembersName%>
  </div> 

 <div class="well">
   <%= f.label :image %><br>
  <%= f.file_field :g_image %>
</div>

<div >
  <%= f.hidden_field :user_id, value:current_user.id %>
  <%= f.hidden_field :lang, id:"lang" %>
  <%= f.hidden_field :lat, id:"lat" %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


