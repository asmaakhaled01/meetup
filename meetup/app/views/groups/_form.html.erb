<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>


  <div class="well">
    <%= f.label :interests %><br>
    <%= f.text_field :interests, id:"inter" %>
    </br>
    Pick up to 15 topics
    </br>
    <input type="button" id="art" class="btn btn-default" value="Art" name="Art" />
    <input type="button" id="food" class="btn btn-default" value="Food" name="Food" />  
  </div>


  <div class="well">
    <%= f.label :name %><br>
    <%= f.text_field :name%>
  </div>


  <div class="well">
    <%= f.label :description %><br>
    <%= f.text_field :description%>
  </div>

 <div class="well">
    <%= f.label :MambersName %><br>
    <%= f.text_field :MembersName%>
  </div> 

  <div class="field">
     <!-- value:current_user.id -->
      <%= f.hidden_field :user_id, value:1 %>
  </div>

  <%= f.file_field :g_image %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<script>
    var str = "" ;
    $( "#art" ).click(function() {
        var value = $( "#art" ).val()+", ";
        $( "#art" ).hide();
        str = str + value
        $( "#inter" ).val(str);
      
    });

    $( "#food" ).click(function() {
        var value = $( "#food" ).val()+", ";
        $( "#food" ).hide();
        str = str + value
        $( "#inter" ).val(str);
    });

</script>