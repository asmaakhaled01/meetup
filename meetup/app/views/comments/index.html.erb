<p id="notice"><%= notice %></p>
<div class="container">  
<div class="page-header">
        <h1  class="text-primary">List Comments</h1>
    </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Body</th>
      <th>User ID</th>
      <th>Event ID</th>
      <th>Show Action</th>
      <th>Edit Action</th>
      <th>Delete Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.event_id %></td>
        <td><%= link_to 'Show', comment , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>