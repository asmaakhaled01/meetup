
<% if logged_in? and current_user.is_admin == true %>
<div class="container">
  
   <div class="page-header">
        <h1  class="text-primary">List Events</h1>
    </div>

<%= link_to 'New Event', new_event_path , class: "btn btn-success"  %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Location</th>
      <th>Date</th>
      <th>Group</th>
       <th>Show Action</th>
      <th>Edit Action</th>
      <th>Delete Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.desc %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.group_id %></td>
        <td><%= link_to 'Show', event , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_event_path(event) , class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<% end %>