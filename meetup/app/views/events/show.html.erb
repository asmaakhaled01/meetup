<p id="notice"><%= notice %></p>

<div class="container-fluid" style="height: 900px; background: url('<%= @event.ev_image %>') no-repeat center; background-size: cover;">

<div class="container">
  <h1 class="text-primary"><%= @event.name %></h1>
  <h1>Number of Attendens : <%= @num_attendens %></h1>


  <% if logged_in? %>
  <% if @event.user_id==current_user.id %>
<%= link_to 'Edit', edit_event_path(@event) %> | 
<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
    <% end %>


  <% if @flag_attend==1 %>
  <div class="col-md-4" ><%= link_to 'Attend', {:controller => "events", :action => "attend", :user_id => current_user.id, :event_id => @event.id }, class:"btn btn-success" %></div>
  <% end %>

        <h2>
          Date : <%= @event.date %>
        </h2>
        <h2>
          Location :  <%= @event.location %>
        </h2>
        <h2>
          Description :  <%= @event.desc %>
        </h2>     
          Comments
<table>
  <% @comments.each do |comment| %>

  <tr id="<%= comment.id %>">
  

   <td><image src="<%=User.find(comment.user_id).image.url(:thumb)%>" width="42" height="42" ><%=User.find(comment.user_id).name%><br>
    <%= comment.body %>
      <% if comment.user_id == current_user.id %>
  <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
    </td>

  
  </tr>
  
      <% end %>

        

      
 </table>


<% if logged_in? %>

<%= csrf_meta_tag %> 
<%= form_for([@event,@event.comments.build]) do |f| %>
 <div class="form-group"> 
 <%= f.label :body %><br> 
 <%= f.text_area :body ,class:"form-control",placeholder:"Add your comment here....."%> 
 <%=  f.hidden_field :user_id  ,value: current_user.id %> 
 </div> <div class="col-sm-10"> 
 <%= f.submit class:"btn btn-success" %> 
 </div> 
<% end %>


<%= link_to 'Edit', edit_event_path(@event) %> 

