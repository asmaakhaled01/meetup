
<div class="container">
	<div class="row">
		<div class="page-header">
        	<h1  class="text-primary"><%= @user.name %></h1>
    	</div>	
		<div class="col-md-8">
			
    		<h4><strong>Email:</strong></h4>
    		<h5><%= @user.email %></h5>
			<% if logged_in? %> 
				<% if current_user.id==@user.id or current_user.is_admin==true %> 
					Edit Info <%= link_to 'Edit', edit_user_path(@user) , class: "btn btn-warning" %>
				<% end %>
			<% end %>

	
		</div>
		<div class="col-md-4">
		
			<img src="<%= @user.image.url %>" class="img-rounded" style="width:200px ; height:200px;">
			<br><br>
			
            		


		</div>
	
	</div>

</div>


