<div class="container">
    <div class="page-header">
        <h1  class="text-primary">List Users</h1>
    </div>

  <%= link_to 'New User', new_user_path , class: "btn btn-success"%>
  <br><br>

    <table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Is admin</th>
       <th>Show Action</th>
      <th>Edit Action</th>
      <th>Delete Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Show', user , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
